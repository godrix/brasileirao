{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "target": "es2015",
    "module": "commonjs",   
    "declaration": true, 
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                     

    "skipLibCheck": true                               
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
